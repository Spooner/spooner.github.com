
- if @summary
  %summary
    %h3= link_to @item[:title], @item.path

    %a{href: @item.path}
      %img.app_icon{alt: "#{@item[:title]} icon", src: "/images/icon/#{File.basename(@item.identifier)}.png"}

    %p.status= @item[:status]

    = @item.summary

    .more= link_to "More...", @item.path

- else
  %article.app
    %img.app_icon{alt: "#{@item[:title]} icon", src: "/images/icon/#{File.basename(@item.identifier)}.png"}

    %p.status= @item[:status]

    = yield


