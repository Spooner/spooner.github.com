%article.app
  - if @summary
    %h3
      = link_to @item[:title], @item.path

  %a{href: @item.path}
    %img.app_icon{alt: "#{@item[:title]} icon", src: "/images/icon/#{File.basename(@item.identifier)}.png"}

  %p.status= @item[:status]

  - if @summary
    = @item.summary
    %p= link_to "More...", @item.path
  - else
    = yield


